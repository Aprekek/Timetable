<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="showIcon"
            type="Boolean" />

        <variable
            name="text"
            type="String" />

        <variable
            name="date"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/timetable_content_description_today"
            android:src="@drawable/shape_circle_blue"
            app:visibleOrGone="@{showIcon}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_10">

            <TextView
                android:id="@+id/name_text_view"
                style="@style/ApplicationTheme.Body3Grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{text}"
                tools:text="Понедельник" />

            <TextView
                android:id="@+id/date_text_view"
                style="@style/ApplicationTheme.CaptionGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:textOrGone="@{date}"
                tools:text="17.06.20" />
        </LinearLayout>
    </FrameLayout>
</layout>