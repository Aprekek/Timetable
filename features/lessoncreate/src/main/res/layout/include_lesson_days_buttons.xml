<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.chip.ChipGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chip_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_monday"
        style="@style/ApplicationTheme.ChipView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lesson_create_chip_monday_short" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_tuesday"
        style="@style/ApplicationTheme.ChipView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lesson_create_chip_tuesday_short" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_wednesday"
        style="@style/ApplicationTheme.ChipView"
