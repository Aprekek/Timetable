        android:text="@string/lesson_create_chip_friday_short" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_saturday"
        style="@style/ApplicationTheme.ChipView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lesson_create_chip_saturday_short" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_sunday"
        style="@style/ApplicationTheme.ChipView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lesson_create_chip_sunday_short" />
</com.google.android.material.chip.ChipGroup>